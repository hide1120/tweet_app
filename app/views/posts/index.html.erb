<% provide(:title, '投稿一覧') %>
<div class="container">
<div clas="row">
<h1 class="mb-3">投稿一覧</h1>
<% @posts.each do | post | %>
<time class="pb-2 d-block" datetime="<%= post.created_at %>"><%= post.created_at.strftime('%Y-%m-%d') %></time>
<h2><%= link_to(post.title,"/posts/#{post.id}") %></h2>
<hr>
<% end %>
</div>
</div>
