<% provide(:title, "ユーザー一覧") %>
<div class="container">
<div clas="row">
<h1 class="mb-3">ユーザー一覧</h1>
<% @users.each do | user | %>
<div class="d-flex align-items-center">
<div class="user-image">
<img class="img-fluid" src="<%= "/user_images/#{user.image_name}" %> ">
</div>
<div><%= link_to(user.name, "/users/#{user.id}") %></div>
</div>
<hr>
<% end %>
</div>
</div>
