<% provide(:title, @user.name) %>
<div class="container">
<div clas="row">
<div class="text-center">
<div class="pb-1 m-auto user-show-image">
<img class="img-fluid" src="<%= "/user_images/#{@user.image_name}" %>">
</div>
<div class="mb-1 font-weight-bold"><%= @user.name %></div>
<div class="mb-1"><%= @user.email %></div>
<% if @user.id == @current_user.id %>
<%= link_to("編集する","/users/#{@user.id}/edit",{class: "btn btn-success",role: "button"}) %>
<% end %>
</div>
<% @user.posts.each do | post | %>
<time class="pb-2 d-block" datetime="<%= post.created_at %>"><%= post.created_at.strftime('%Y-%m-%d') %></time>
<h2><%= link_to(post.title,"/posts/#{post.id}") %></h2>
<% end %>
</div>
</div>
